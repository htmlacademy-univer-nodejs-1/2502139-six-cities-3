{
  "name": "six-cities",
  "version": "4.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/src/main.rest.js | pino-pretty --colorize --translateTime SYS:standard",
    "dev:rest": "tsx --watch ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "dev:cli": "tsx ./src/main.cli.ts",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "lint:ts": "tsc --noEmit",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "mock:server": "json-server src/mocks/mock-server-data.json --port 4444",
    "mock:generate": "tsx ./src/main.cli.ts --generate 100 import-data.tsv http://localhost:4444/api",
    "mock:import": "tsx ./src/main.cli.ts --import import-data.tsv admin test 127.0.0.1 six-cities 7MdpZ5HoE3ewvqjvIGUGZLR27/bwvWdoz/PbsKssgPo="
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.11",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-alpha.23",
    "pino-pretty": "^11.0.0",
    "rimraf": "3.0.2",
    "tsx": "^4.7.2",
    "typescript": "4.9.5"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "got": "^12.6.1",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.2",
    "jose": "^5.3.0",
    "mime-types": "^2.1.35",
    "mongoose": "^8.2.4",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.7",
    "pino": "^8.19.0",
    "reflect-metadata": "^0.2.1"
  }
}
